@model FMS.Data.Truck

@{
    ViewBag.Title = "Sửa xe tra nạp";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
                @Html.ActionLink("Quay về danh sách", "Index")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Sân bay", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AirportId", null, htmlAttributes: new { @class = "form-control select2" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mã số xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("Dung tích bồn", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxAmount, new { htmlAttributes = new { @class = "form-control", @Value = Math.Round(Model.MaxAmount) } })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Đơn vị", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                <select class="form-control valid" id="Unit" name="Unit">
                    <option @(Model.Unit == "G" ? "selected" : "") value="G">G</option>
                    <option @(Model.Unit == "L" ? "selected" : "") value="L">L</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
                @Html.ActionLink("Quay về danh sách", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Content/select2/js/select2.full.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $(".select2").select2();
        })
    </script>
}
