
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FMS Delivery</title>

    <link href="~/admin-lte2.4/css/AdminLTE.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/admin-lte2.4/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet">
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <div class="content-wrapper">    
            <section class="content  container-fluid">
                @RenderBody()
            </section>   
        </div>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @*<script src="~/admin-lte2.4/js/adminlte.min.js"></script>*@
    <script src="~/admin-lte2.4/js/adminlte.js"></script>
    <script>
        $('body').mouseup(function (e) {
            if ($(".log ul.hidden").length <= 0) {
                $(".log ul").addClass("hidden")
            }
        });

        $('.log a').click(function () {
            //$('.log ul').slideToggle("fast");
            if ($(".log ul.hidden").length > 0) {
                $(".log ul").removeClass("hidden")
            }
            else {
                $(".log ul").addClass("hidden");
            }
        });
    </script>
</body>
</html>
